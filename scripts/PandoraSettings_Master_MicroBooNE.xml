        <PfoListName>RecreatedPfos</PfoListName>
        <RootDataFileName>OUTPUT_DIR/data2.root</RootDataFileName>
        <tool type = "LArBirksHitSelection" description = "BirksHitSelection">
            <BirksSelectionBinWidth>5.</BirksSelectionBinWidth>
            <BirksSelectionSearchXWidthFraction>0.1</BirksSelectionSearchXWidthFraction>
            <BirksSelectionSearchYWidth>0.1</BirksSelectionSearchYWidth>
            <BirksSelectionMinDensityFraction>0.25</BirksSelectionMinDensityFraction>
            <MakePlots>false</MakePlots>
        </tool>
    </algorithm-->
    
    <algorithm type = "LArAnalysis">
        <PfoListName>RecreatedPfos</PfoListName>
        <MCParticleListName>Input</MCParticleListName>
        <CaloHitListName>CaloHitList2D</CaloHitListName>
        <VertexListName>RecreatedVertices</VertexListName>
        <ParametersFile>/Users/jaw/Dropbox/PhD/params.root</ParametersFile>
        <TmvaWeights>/Users/jaw/Dropbox/PhD/weights/TMVAClassification_BDT.weights.xml</TmvaWeights>
        <McContainmentFractionLowerBound>0.9</McContainmentFractionLowerBound>
        <tool type = "LArBirksHitSelection" description = "BirksHitSelection">
            <BirksSelectionBinWidth>5.0</BirksSelectionBinWidth>
            <BirksSelectionSearchXWidthFraction>0.1</BirksSelectionSearchXWidthFraction>
            <BirksSelectionSearchYWidth>0.1</BirksSelectionSearchYWidth>
            <BirksSelectionMinDensityFraction>0.25</BirksSelectionMinDensityFraction>
            <MakePlots>false</MakePlots>
        </tool>
    </algorithm>
    
    <algorithm type = "LArWriteAnalysisParticles">
        <PfoListName>RecreatedPfos</PfoListName>
        <MCParticleListName>Input</MCParticleListName>
        <CaloHitListName>CaloHitList2D</CaloHitListName>
        <OutputFile>OUTPUT_DIR/PandoraTree.root</OutputFile>
        <Verbose>true</Verbose>
    </algorithm>
</pandora>
